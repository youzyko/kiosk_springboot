<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.kiosk.cart.repository.CartRepository">
    <insert id="add">
        INSERT INTO  cart
            (here,hot,ice,itemName,itemPrice,ownImgId,itemImg)
        VALUES
            (#{here},#{hot},#{ice},#{itemName},#{itemPrice},#{ownImgId},#{itemImg})
    </insert>

    <select id="showAll" resultType="com.example.kiosk.cart.entity.Cart">
        SELECT
          *
        FROM
            cart

    </select>

    <select id="findImg" resultType="String">
        SELECT itemImg
        FROM cart
        where ownImgId=#{ownImgId}

    </select>


</mapper>