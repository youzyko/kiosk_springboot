<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.kiosk.option.repository.OptionRepository">
    <select id="coffeeOption" resultType="com.example.kiosk.option.entity.Option">
        SELECT
            menuName,menuId,hereTogo,hotCold, iceAmount
        FROM
            option
        WHERE menuId=#{menuId}
    </select>
    <select id="nonCoffeeOption" resultType="com.example.kiosk.option.entity.Option">
        SELECT
            menuName,menuId,hereTogo,hotCold, iceAmount
        FROM
            option
        WHERE menuId=#{menuId}

    </select>

</mapper>